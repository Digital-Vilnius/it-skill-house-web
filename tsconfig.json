{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src"
  },
  "include": [
    "src"
  ],
  "paths": {
    "api/*": [
      "./src/api/*"
    ],
    "assets/*": [
      "./src/assets/*"
    ],
    "components/*": [
      "./src/components/*"
    ],
    "core/*": [
      "./src/core/*"
    ],
    "features/*": [
      "./src/features/*"
    ],
    "layouts/*": [
      "./src/layouts/*"
    ],
    "navigation/*": [
      "./src/navigation/*"
    ],
    "utils/*": [
      "./src/utils/*"
    ]
  }
}
